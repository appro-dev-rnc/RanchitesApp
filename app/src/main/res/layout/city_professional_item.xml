<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="16dp"
    app:cardElevation="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:theme="@style/Theme.AppCompat.DayNight"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:background="@color/city_professionals_item_background_color"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_city_professional_item"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/txt_city_professional_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/allerta"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:maxLines="1"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/txt_city_professional_item_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:fontFamily="@font/droid_serif"
            android:gravity="center"
            android:text=""
            android:maxLines="1"
            android:textColor="@color/black"/>
        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rating_city_professional_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>