<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.LocationOwnerFrag">

    <!-- TODO: Update blank fragment layout -->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loc_det_owner_det_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="16dp"

            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_loc_det_owner_prof"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_person"
                    app:civ_border_color="#a12f2f"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/txt_loc_det_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textAllCaps="true"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    />

                <TextView
                    android:id="@+id/txt_loc_det_owner_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:layout_margin="4dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    style="@style/TextAppearance.AppCompat.Body1"
                    app:drawableStartCompat="@drawable/ic_mail"
                    app:drawableTint="@color/black"
                    android:drawablePadding="4dp"

                    android:autoLink="email"
                    android:linksClickable="true"/>

                <TextView
                    android:id="@+id/txt_loc_det_owner_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_loc_det_owner_email"
                    android:text="@string/phone_number"
                    android:layout_margin="4dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    style="@style/TextAppearance.AppCompat.Body1"
                    app:drawableStartCompat="@drawable/ic_phone"
                    app:drawableTint="@color/black"
                    android:drawablePadding="4dp"
                    android:autoLink="phone"
                    android:linksClickable="true"/>



            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.core.widget.NestedScrollView>