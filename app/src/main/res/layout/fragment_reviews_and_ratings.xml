<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.DayNight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ReviewsAndRatings"
    android:id="@+id/cons_reviews_root_view">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/material_rating_det_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearlayout23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"

                android:background="#EBDEF0"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearlayoutRatingHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_user_com_det_rating_sec_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="50sp" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/rating_user_com_det_rating_sec"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_user_com_det_rating_sec_title"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:theme="@style/RatingBarThemeDarkBg"/>

                    <TextView
                        android:id="@+id/txt_user_total_reviews_count_rating_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rating_user_com_det_rating_sec"
                        android:text=""
                        android:maxLength="10"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/rating_user_com_det_rating_sec"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/linearlayoutRatingHead"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/user_seekBar_rating_5"
                            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="30"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="10dp"
                            android:layout_marginStart="4dp"
                            app:trackColor="@color/white"
                            app:indicatorColor="@color/seekbar_track_indicator"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/user_seekBar_rating_4"
                            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="30"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="10dp"
                            android:layout_marginStart="4dp"
                            app:trackColor="@color/white"
                            app:indicatorColor="@color/seekbar_track_indicator" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/user_seekBar_rating_3"
                            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="30"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="10dp"
                            android:layout_marginStart="4dp"
                            app:trackColor="@color/white"
                            app:indicatorColor="@color/seekbar_track_indicator"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/user_seekBar_rating_2"
                            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="30"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="10dp"
                            android:layout_marginStart="4dp"
                            app:trackColor="@color/white"
                            app:indicatorColor="@color/seekbar_track_indicator"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/user_seekBar_rating_1"
                            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="30"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="10dp"
                            android:layout_marginStart="4dp"
                            app:trackColor="@color/white"
                            app:indicatorColor="@color/seekbar_track_indicator"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reviews"
                android:textAllCaps="true"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Title"
                android:padding="4dp"
                />
        </com.google.android.material.card.MaterialCardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_user_comp_det_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:id="@+id/txt_user_det_no_review_found_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_reviews_found"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.core.widget.NestedScrollView>